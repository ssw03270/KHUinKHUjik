<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".JobListActivity">
    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#ECEDEA">

        <TextView
            android:id="@+id/textView3"
            android:layout_width="match_parent"
            android:layout_height="300dp"
            android:layout_marginTop="30dp"
            android:gravity="center"
            android:textSize="30sp"
            android:textStyle="bold"
            android:textColor="#505050"
            android:fontFamily="@font/bmyeonsung"
            android:text="쿠인쿠직"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="300dp"
            android:layout_below="@+id/textView3"
            android:layout_marginTop="50dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            android:src="@drawable/mascotimsi" />

        <TextView
            android:id="@+id/textView"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/imageView"
            android:layout_marginTop="50dp"
            android:gravity="center"
            android:textSize="25sp"
            android:fontFamily="@font/bmyeonsung"
            android:textStyle="bold"
            android:textColor="#505050"
            android:text="원하시는 직종을 골라주세요"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/textView2"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/textView"
            android:layout_marginTop="15dp"
            android:gravity="center"
            android:textSize="20sp"
            android:textStyle="bold"
            android:textColor="#505050"
            android:fontFamily="@font/bmyeonsung"
            android:text="화면을 눌러주세요"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintLeft_toLeftOf="parent"
            app:layout_constraintRight_toRightOf="parent"
            app:layout_constraintTop_toTopOf="parent" />
    </RelativeLayout>

    <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#CCECEDEA">
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:fillViewport="true">
        <RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
            android:layout_width="400dp"
            android:layout_height="match_parent"
            android:background="#00ECEDEA"
            android:layout_gravity="center_horizontal">

            <Button
                android:id="@+id/button"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="100dp"
                android:padding="15dp"
                android:text="경영ㆍ사무ㆍ금융ㆍ보험"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="firstButton"/>

            <Button
                android:id="@+id/button2"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="연구 및 공학기술"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="secondButton"/>

            <Button
                android:id="@+id/button3"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button2"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="교육ㆍ법률ㆍ경찰ㆍ소방"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="thirdButton"/>

            <Button
                android:id="@+id/button4"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button3"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="보건ㆍ의료"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="fourthButton"/>

            <Button
                android:id="@+id/button5"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button4"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="예술ㆍ방송ㆍ스포츠"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="fifthButton"/>

            <Button
                android:id="@+id/button6"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button5"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="미용ㆍ음식ㆍ경비ㆍ돌봄"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="sixthButton"/>

            <Button
                android:id="@+id/button7"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button6"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="영업ㆍ판매ㆍ운전ㆍ운송"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="seventhButton"/>

            <Button
                android:id="@+id/button8"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button7"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="건설ㆍ채굴"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="eighthButton"/>

            <Button
                android:id="@+id/button9"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button8"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="설치ㆍ정비ㆍ생산"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="ninthButton"/>

            <Button
                android:id="@+id/button10"
                android:background="@drawable/box"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_centerHorizontal="true"
                android:layout_below="@id/button9"
                android:layout_marginTop="50dp"
                android:padding="15dp"
                android:text="농림어업직"
                android:textSize="40sp"
                android:fontFamily="@font/bmyeonsung"
                android:onClick="tenthButton"/>
        </RelativeLayout>
    </ScrollView>


</androidx.constraintlayout.widget.ConstraintLayout>